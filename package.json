{
  "name": "gst-invoices",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "db:check": "node scripts/check-database.js",
    "db:migrate": "node scripts/apply-migrations.js",
    "db:seed": "tsx scripts/seed.ts",
    "db:seed:dev": "NODE_ENV=development tsx scripts/seed.ts",
    "db:clear": "tsx scripts/clear-demo-data.ts",
    "db:reset": "npm run db:clear && npm run db:seed",
    "test": "vitest",
    "test:unit": "vitest run --coverage",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:unit && npm run test:e2e"
  },
  "repository": {
    "type": "git",
    "url": "git+https://ajay-nishad@github.com/ajay-nishad/GST-Invoices.git"
  },
  "keywords": [
    "nextjs",
    "typescript",
    "tailwind",
    "gst",
    "invoices"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ajay-nishad/GST-Invoices/issues"
  },
  "homepage": "https://github.com/ajay-nishad/GST-Invoices#readme",
  "description": "A modern GST invoice management system built with Next.js 15",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.15",
    "@react-pdf/renderer": "^4.3.1",
    "@reduxjs/toolkit": "^2.9.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.58.0",
    "@types/react": "^19.1.14",
    "@types/react-dom": "^19.1.9",
    "canvas": "^3.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.544.0",
    "next": "^15.5.4",
    "next-themes": "^0.4.6",
    "qrcode": "^1.5.4",
    "razorpay": "^2.9.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.63.0",
    "react-redux": "^9.2.0",
    "recharts": "^3.2.1",
    "resend": "^6.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2",
    "xlsx": "^0.18.5",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.55.1",
    "@types/node": "^24.5.2",
    "@types/qrcode": "^1.5.5",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "babel-plugin-react-compiler": "^19.1.0-rc.3",
    "dotenv": "^17.2.2",
    "eslint": "^9.36.0",
    "eslint-config-next": "^15.5.4",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.6",
    "vitest": "^3.2.4"
  }
}
